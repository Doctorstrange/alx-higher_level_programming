#!/usr/bin/python3
def best_score(a_dictionary):
    dic_keys = list(a_dictionary.keys())
    max_score = 0
    for i in dic_keys:
        score = a_dictionary.get(i)
        if score > max_score:
            max_score = score
    if not a_dictionary:
        return (None)
    else:
        return (max_score)
